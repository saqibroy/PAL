<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<% flash.each do |name,msg|%>
                <%= content_tag :div, msg, class: "alert alert-danger flash-popup", role: "alert" %>
                <% end %>
     
    <div class="row">
      <ol class="breadcrumb">
        <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
        <li class="active">questions</li>
      </ol>
    </div><!--/.row-->
    
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">questions</h1>
      </div>
    </div><!--/.row-->
        
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">questions</div>
          <div class="panel-body">
            <table data-toggle="table" >
                <thead>
                <tr>
                    <th>course</th>
                    <th>question</th>
                    <th>action</th>
                </tr>
                </thead>
                <tbody>
                <% @questions.each do |question| %>
                  <tr data-index="0">
                    <td style=""><%= question.course %></td>
                    <td style=""><%= question.content %></td>
                    <td><a href="<%= admin_answer_new_path(id: question.id) %>"><button class="btn btn-primary">Answer</button></a></td>
                  </tr>
                  <% end %>

                  
                </tbody>
            </table>
          </div>
        </div>
      </div>

    </div><!--/.row-->  
    
    
  </div><!--/.main-->
